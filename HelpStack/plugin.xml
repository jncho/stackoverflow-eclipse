<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="helpstack"
            name="HelpStack">
      </category>
      <view
            category="helpstack"
            class="helpstack.views.HelpStackView"
            icon="icons/sample.png"
            id="helpstack"
            inject="true"
            name="HelpStack">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="helpstack.views.HelpStackView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
